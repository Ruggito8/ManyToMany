@model IEnumerable<AuthorBookViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <h2>@item.AuthorName</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome Libro
                </th>
                <th>
                   Prezzo
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item2 in item.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item2.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item2.Price)
                    </td>
                    @*<td>
                            <a asp-action="Edit" asp-route-id="@item.AuthorBookId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.AuthorBookId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.AuthorBookId">Delete</a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
}